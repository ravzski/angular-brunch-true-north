head
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

	title(ng-bind-template='{{title}}')
	meta(name='description', content='')
	meta(name='author', content='')

	//- Mobile viewport optimized: h5bp.com/viewport
	meta(name='viewport', content='width=device-width,initial-scale=1')

	//- Place favicon.ico and apple-touch-icon.png
	//-  in the root directory: mathiasbynens.be/notes/touch-icons

	link(rel='stylesheet', href='css/app.css')

	//- More ideas for your <head> here: h5bp.com/d/head-Tips

	script(src='js/modernizr.js')

	script.
		window.brunch = window.brunch || {};
		window.brunch['auto-reload'] = { enabled: true };

body
	.wrapper
		.navbar.navbar-static-top
			.navbar-inner
				.container
					button.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a(href='/').brand Angular Brunch Seed
					.nav-collapse
						div(ng-include="'/partials/nav.html'")
		.container.main-content
			div(ng-view)
			div Angular Brunch seed app: v<span app-version></span>
		.push

	footer.footer
		.container
			p
				small
					a(href='https://github.com/scoarescoare/angular-brunch-true-north') angular-brunch-true-north | source

	//- JavaScript at the bottom for fast page loading
	script(src='/js/vendor.js')
	script(src='/js/app.js')
